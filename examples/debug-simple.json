{
  "_description": "Simple debug example - Debugging /bin/sleep locally",
  "redis": {
    "host": "localhost",
    "port": 6379,
    "secrets_dir": "/run/jon_secrets/vault/redis/wrapp"
  },
  "app": {
    "executable": "/bin/sleep",
    "args": ["3600"],
    "stream_name": "sleep-debug"
  },
  "debug": {
    "enabled": true,
    "port": 2345,
    "host": "127.0.0.1"
  },
  "_instructions": [
    "To connect from GDB:",
    "  gdb /bin/sleep",
    "  (gdb) target remote 127.0.0.1:2345",
    "  (gdb) break main",
    "  (gdb) continue"
  ]
}
